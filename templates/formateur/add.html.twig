{% extends 'base.html.twig' %}

{% block title %} Ajout formateur{% endblock %}

{% block body %}

    <div class="container-page">
        {% if edit %}
            <h1>Editer le formateur</h1>
        {% else %}
            <h1> Ajouter un formateur </h1>    
        {% endif %}

            <a href="{{ path('app_formateur') }}">Retour</a>                   

        <div class="page-elements">
            {{ form_start(formAddFormateur) }}
                {{ form_row(formAddFormateur.nom) }}
                {{ form_row(formAddFormateur.prenom) }}
                {{ form_row(formAddFormateur.submit) }}
            {{ form_end(formAddFormateur) }}               
        </div>
    </div>

{% endblock %}