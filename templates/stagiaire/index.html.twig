{% extends 'base.html.twig' %}

{% block title %}Stagiaires{% endblock %}

{% block body %}

    <div class="container-page">
    {% if app.user %}
        <h1>Liste des stagiaires</h1>

        <div class="page-elements">
            <a href="{{ path('add_stagiaire') }}">Ajouter un stagiaire</a>

            <table>
                <tr>
                    <th>Nom / Prénom</th>
                    <th>Détails</th>
                    <th>Actions</th>
                </tr>
                {% for stagiaire in stagiaires %}
                <tr>
                    <td>{{ stagiaire }}</td>
                    <td><a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">Détails</a> </td>
                    <td>
                        <a href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}">Edit</a>
                        <a href="{{ path('remove_stagiaire', {'id': stagiaire.id}) }}">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}   
            </table>            
        </div>
    {% else %}
        <p>Merci de bien vouloir vous connecter pour accéder au contenu</p>
    {% endif %}
 
    </div>




{% endblock %}
