{% extends 'base.html.twig' %}

{% block title %} Ajout catégorie{% endblock %}

{% block body %}


    <div class="container-page">
    {% if app.user %}
        {% if edit %}
            <h1>Modifier la catégorie</h1>
        {% else %}
            <h1> Ajouter une catégorie </h1>  
        {% endif %}

        <div class="page-elements">
            {{ form_start(formAddCategorie) }}
                {{ form_row(formAddCategorie.intitule) }}
                {{ form_row(formAddCategorie.submit) }}    
            {{ form_end(formAddCategorie) }}                 
        </div>
    {% else %}
        <p>Merci de bien vouloir vous connecter pour accéder au contenu</p>
    {% endif %}
    </div>

{% endblock %}