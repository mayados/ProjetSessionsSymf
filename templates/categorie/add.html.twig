{% extends 'base.html.twig' %}

{% block title %} Ajout catégorie{% endblock %}

{% block body %}


    <div class="container-page">
        {% if edit %}
            <h1>Modifier la catégorie</h1>
        {% else %}
            <h1> Ajouter une catégorie </h1>  
        {% endif %}
   

        <div class="page-elements">

            <a class="retour-link" href="{{ path('app_categorie') }}">Retour</a>             

            <div class="element">
                {{ form_start(formAddCategorie) }}
                <div class="formulaire">
                    <div class="form-element">
                        <label>Intitulé :</label>
                        <p>{{ form_row(formAddCategorie.intitule) }}</p>
                    </div>
                    <div class="form-element">
                        <p>{{ form_row(formAddCategorie.submit) }} </p>
                    </div>                    
                </div>
                {{ form_end(formAddCategorie) }}                    
            </div>
        </div>
    </div>

{% endblock %}