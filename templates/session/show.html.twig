{% extends 'base.html.twig' %}

{% block title %}Détail Session{% endblock %}

{% block body %}

    <h1> Détail Session {{ session }} </h1>

    <p>Inscrire un stagiaire</p>
    <a href="{{ path('add_programme') }}">Ajouter module</a>

    {# {{ form(formAddProgramme) }} #}


    <h2>Programme :</h2>

    <table>
        <tr>
            <th>Module</th>
            <th>Durée (jours)</th>
        </tr>
        {% for programme in session.programmes %}
        <tr>   
            <td>{{ programme.module }}</td> 
            <td>{{ programme.duree }} jours</td>
            <td><a href="{{ path('delete_programme', {'id': programme.id}) }}">Supprimer le module</a> </td>              
        </tr>
        {% endfor %}        
    </table>

    <h3>STAGIAIRES</h3>

    <table>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
        </tr>
        {% for stagiaire in session.stagiaires %}
            <tr>
                <td>{{ stagiaire.nom }}</td>
                <td>{{ stagiaire.prenom }}</td>     
                <td><a href="#">Désinscrire</a></td>         
            </tr>
        {% endfor %}        
    </table>


{% endblock %}